<%= form_for @customer do |f| %>

<div id="formFields">
  <table>
    <tr>
      <td>
        <div class="field">
          <%= f.label :fname, "First Name" %><br />
          <%= f.text_field :fname %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label :lname, "Last Name" %><br />
          <%= f.text_field :lname %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="field">
          <%= f.label :address %><br />
          <%= f.text_field :address %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label :prov %><br />
          <%= f.text_field :prov %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="field">
          <%= f.label :country %><br />
          <%= f.text_field :country %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label :postal_code %><br />
          <%= f.text_field :postal_code %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.text_field :email %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label :phone %><br />
          <%= f.text_field :phone %>
        </div>
      </td>
    </tr>
  </table>
</div>

<div  id="editButtons" class="buttonContainer">
    <div class="buttonRow">
      <%= f.submit :class => 'jqButton' %>
      <%= link_to "Cancel", @customer, :class => 'jqButton ajaxLink', :id => "canceLink" unless @customer.new_record? %>
    </div>
  </div>


<% end %>
